@using Microsoft.AspNetCore.Identity
@using BusinessObjects
@inject SignInManager<ApplicationUser> SignInManager;
@inject UserManager<ApplicationUser> UserManager;


<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a title="Sign Out" class="btn btn-outline-secondary btn-outline my-2 my-sm-0" asp-area="" asp-controller="Auth" asp-action="Logout"><i class="fa fa-sign-out"></i> </a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a title="Sign In" class="btn btn-outline-secondary btn-outline my-2 my-sm-0" asp-area="" asp-controller="Auth" asp-action="Login"><i class="fa fa-sign-in"></i></a>
        </li>
        <li class="nav-item">
            <a title="Sign Up" class="btn btn-outline-secondary my-2 my-sm-0" asp-area="" asp-controller="Auth" asp-action="Register"><i class="fa fa-user-plus"></i> </a>
        </li>
    }
</ul>